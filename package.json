{
  "name": "sbr-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Next.js monorepo with web and admin applications",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:prepare": "pnpm db:generate && pnpm db:push",
    "dev:web": "turbo run dev --filter=@sbr/web",
    "dev:admin": "turbo run dev --filter=@sbr/admin",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "clean:all": "rimraf node_modules packages/*/node_modules apps/*/node_modules apps/*/.next packages/database/.prisma",
    "db:generate": "cd packages/database && pnpm prisma generate",
    "db:push": "cd packages/database && pnpm prisma db push",
    "db:migrate": "cd packages/database && pnpm prisma migrate dev",
    "db:studio": "cd packages/database && pnpm prisma studio",
    "postinstall": "pnpm db:generate",
    "prisma:clean": "rimraf \"node_modules/.pnpm/@prisma+client@*/node_modules/.prisma/client\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
